{
  "version": "12.4.4",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "ngrx/*",
    "rxjs/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true
    },
    "command": {
      "version": {
        "allowBranch": [
          "main",
          "hotfix/*"
        ]
      }
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ]
}
